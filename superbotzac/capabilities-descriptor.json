{
  "name": "${name}",
  "description": "${name} Addon",
  "key": "${name}-hipchat-addon",
  "links": {
    "homepage": "${host}",
    "self": "${host}/capabilities.json"
  },
  "vendor": {
    "name": "JoPs",
    "url": "http://www.jops-dev.com/"
  },
  "capabilities": {
    "hipchatApiConsumer": {
      "fromName": "${name}",
      "scopes": [
        "send_notification",
        "send_message"
      ]
    },
    "installable": {
      "allowGlobal": false,
      "allowRoom": true,
      "callbackUrl": "${host}/installed",
      "uninstalledUrl": "${host}/uninstalled"
    },
    "webhook": [
      {
        "url": "${host}/record",
        "event": "room_message",
        "pattern": ".*",
        "name": "Record",
        "authentication": "jwt"
      }
    ]
  }
}
