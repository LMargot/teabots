{
  "name": "BigBrother",
  "description": "BigBrother Addon",
  "key": "bigbrother-hipchat-addon",
  "links": {
    "homepage": "${host}",
    "self": "${host}/capabilities.json"
  },
  "vendor": {
    "name": "JoPs",
    "url": "http://www.jops-dev.com/"
  },
  "capabilities": {
    "hipchatApiConsumer": {
      "fromName": "BigBrother",
      "scopes": [
        "send_notification"
      ]
    },
    "installable": {
      "allowGlobal": false,
      "allowRoom": true,
      "callbackUrl": "${host}/installed",
      "uninstalledUrl": "${host}/uninstalled"
    },
    "webhook": [
      {
        "url": "${host}/record",
        "event": "room_message",
        "pattern": ".*",
        "name": "Record",
        "authentication": "jwt"
      }
    ]
  }
}
