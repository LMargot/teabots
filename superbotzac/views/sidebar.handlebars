<section id="content" role="main" class="ac-content">
  <form class="search-form aui">
      <div class="field-group">
        <input class="text medium-field" type="text" id="search-query" name="search-query" placeholder="Rechercher dans l'historique">
      </div>
  </form>

  <ul class="search-results"></ul>
</section>

<script id="results-template" type="text/x-handlebars-template">
  \{{#each results}}
    <li class="search-result">
      <div class="search-result-author">\{{this.author}}</div>
      <div class="search-result-message"><pre>\{{this.message}}</pre></div>
    </li>
  \{{/each}}
</script>

<script type="text/javascript">
  $(document).ready(function () {
    const searchResultsTemplate = Handlebars.compile($('#results-template').html().trim());

    $(".search-form").submit(function (event) {
      event.preventDefault();

      HipChat.auth.withToken(function(err, token) {
        $.ajax({
          type: "POST",
          url: "{{endpoint}}/search",
          headers: { 'authorization': 'JWT ' + token },
          data: {
            query: $("input#search-query").val().trim()
          },
          dataType: 'json',
          error: function (jqXHR, status) {
            alert('fail' + status.code);
          },
          success: function (data) {
            $('.search-results').html(searchResultsTemplate({
              results: data.map(function (result) {
                return result['_source'];
              })
            }));
          }
        });
      });
    });

  });
</script>
